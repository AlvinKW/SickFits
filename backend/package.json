{
	"name": "sick-fits-backend",
	"version": "1.0.0",
	"author": "Kazi Jawad",
	"description": "The backend of an e-commerce store.",
	"scripts": {
		"start": "node src/index.js",
		"dev": "nodemon -e js,graphql -x node --inspect src/index.js",
		"test": "jest",
		"build": "node src/index.js",
		"deploy": "prisma deploy && npm run writeSchema",
		"writeSchema": "node src/writeSchema.js"
	},
	"dependencies": {
		"babel-preset-env": "^1.7.0",
		"bcryptjs": "2.4.3",
		"cookie-parser": "^1.4.4",
		"dotenv": "^8.1.0",
		"graphql": "^14.5.3",
		"graphql-cli": "^3.0.14",
		"graphql-import": "^0.7.1",
		"graphql-yoga": "^1.18.2",
		"jsonwebtoken": "^8.5.1",
		"nodemailer": "^4.6.8",
		"prisma": "^1.34.6",
		"prisma-binding": "^2.3.15",
		"stripe": "^6.12.1"
	},
	"devDependencies": {
		"nodemon": "^1.19.1"
	},
	"eslintConfig": {
		"extends": "eslint:recommended",
		"env": {
			"node": true,
			"es6": true
		},
		"parserOptions": {
			"ecmaVersion": 2018
		},
		"rules": {
			"block-spacing": "error",
			"brace-style": [
				"error",
				"1tbs",
				{
					"allowSingleLine": true
				}
			],
			"comma-dangle": [
				"error",
				"always-multiline"
			],
			"comma-spacing": "error",
			"comma-style": "error",
			"curly": "error",
			"default-case": "error",
			"handle-callback-err": "error",
			"indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"no-console": "off",
			"no-empty-function": "error",
			"no-floating-decimal": "error",
			"no-inline-comments": "off",
			"no-lonely-if": "error",
			"no-multi-spaces": "error",
			"no-multiple-empty-lines": [
				"error",
				{
					"max": 1,
					"maxEOF": 1,
					"maxBOF": 0
				}
			],
			"no-trailing-spaces": "error",
			"object-curly-spacing": [
				"error",
				"always"
			],
			"prefer-const": "error",
			"quotes": [
				"error",
				"single"
			],
			"semi": "error",
			"space-before-blocks": "error",
			"space-before-function-paren": [
				"error",
				"never"
			],
			"space-in-parens": "error",
			"space-infix-ops": "error",
			"space-unary-ops": [
				"error",
				{
					"words": true,
					"nonwords": false
				}
			],
			"spaced-comment": "error",
			"yoda": "error",
			"eol-last": "error"
		}
	},
	"babel": {
		"presets": [
			"env"
		]
	}
}
